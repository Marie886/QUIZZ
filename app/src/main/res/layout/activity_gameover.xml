<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#002b35">




    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="404dp"
        android:layout_height="250dp"
        android:background="@color/color_tv_welcom"

        android:layout_centerInParent="true">

    <Button
        android:id="@+id/bRejoeur"
        android:layout_width="270dp"
        android:textStyle="bold"
        android:layout_height="80dp"
        android:text="Rejouer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:background="#cdcaec"
        android:textColor="@color/color_tv_welcom"/>

    <Button
        android:id="@+id/bRetoure"
        android:layout_width="270dp"
        android:textStyle="bold"
        android:layout_height="80dp"
        android:text="Retour au menu"
        android:layout_below="@id/bRejoeur"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:background="#cdcaec"
        android:textColor="@color/color_tv_welcom"

        />
    </RelativeLayout>
</RelativeLayout>
